@page "/"
@using UserApp.Web.HttpClients
@using UserApp.Web.Models
@inject UserApiClient ApiClient
@rendermode InteractiveServer

<PageTitle>User Management</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>User Management</h1>
    <button class="btn btn-primary" @onclick="OpenModal">
        <i class="bi bi-plus-lg"></i> Add New User
    </button>
</div>

@if (users == null)
{
    <p><em>Loading users...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Sex</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Age</td>
                    <td>@user.Sex</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showModal)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New User</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal" aria-label="Close"></button>
                </div>
                
                <EditForm Model="@newUser" OnValidSubmit="HandleAddUser" FormName="AddUserForm">
                    <DataAnnotationsValidator />
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">First Name</label>
                            <InputText @bind-Value="newUser.FirstName" class="form-control" placeholder="John" />
                            <ValidationMessage For="@(() => newUser.FirstName)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Last Name</label>
                            <InputText @bind-Value="newUser.LastName" class="form-control" placeholder="Doe" />
                            <ValidationMessage For="@(() => newUser.LastName)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Age</label>
                            <InputNumber @bind-Value="newUser.Age" class="form-control" />
                            <ValidationMessage For="@(() => newUser.Age)" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sex</label>
                            <InputSelect @bind-Value="newUser.Sex" class="form-select">
                                <option value="">-- Select --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => newUser.Sex)" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save User</button>
                    </div>
                </EditForm>

            </div>
        </div>
    </div>
}

@code {
    private User[]? users;
    private User newUser = new() { FirstName = "", LastName = "", Sex = "" };
    private bool showModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await ApiClient.GetUsersAsync();
    }

    private void OpenModal()
    {
        // Reset the form when opening
        newUser = new() { FirstName = "", LastName = "", Sex = "" };
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task HandleAddUser()
    {
        await ApiClient.AddUserAsync(newUser);
        showModal = false; // Close modal on success
        await LoadUsers(); // Refresh list
    }
}